{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "stone-tauri",
  "version": "0.1.0",
  "identifier": "com.stone-tauri.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "stone-tauri",
        "width": 800,
        "height": 600,
        "transparent": true,
        "titleBarStyle": "Overlay"
      },
      {
        "label": "quick-capture",
        "title": "Quick Capture",
        "url": "index.html#/quick-capture",
        "width": 500,
        "height": 140,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "resizable": false,
        "skipTaskbar": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
